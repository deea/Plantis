<div class="modal info fade" id="modal-show<%= plant.id %>" tabindex="-1" role="dialog" aria-labelledby="Plant" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> <%= plant.nickname %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-photo">
        <%= cl_image_tag plant.plant.photo %>
      </div>
      <div class="modal-body">
        <p> <i class="fas fa-calendar-day"></i> <%= plant.days_until_water %> <%= "day".pluralize(plant.days_until_water) %> until water! </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary modal-water-anyway" >Water anyway?</button>
      </div>
    </div>
  </div>
</div>
